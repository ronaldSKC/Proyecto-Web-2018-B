<%- include('header') %>
<div class="container"  style="width: 100%">
    <h1>REGISTRAR UNA MASCOTA</h1>

    <form action="/mascota/crear-mascota/"
          method="GET">
    <div class="row" >
        <div class="col-sm-10">
            <div class="form-group"></div>
            <label for="nombreMascota"> Nombre de la mascota</label>
            <input type="text" id="nombreMascota" name="nombreMascota" type="text" class="form-control">
        </div>
    </div>
    <div class="row" >
        <div class="col-sm-5">
            <div class="form-group"></div>
            <label for="generoMascota">Sexo</label>
            <select name="generoMascota"
                    id="generoMascota"
                    class="form-control">
                <option value="1">Hembra</option>
                <option value="2">Macho</option>
            </select>

        </div>
        <div class="col-sm-5">
            <div class="form-group"></div>
            <label for="edadMascota">Edad aproximada</label>
            <input type="text"
                   id="edadMascota"
                   name="edadMascota"
                   class="form-control">
        </div>
    </div>

    <div class="row">
        <div class="col-sm-5">
            <div class="form-group"></div>
            <label for="tamanioMacota">Tamaño </label>
            <input type="text"
                   name="tamanioMascota"
                   id="tamanioMascota"
                   class="form-control">
        </div>
        <div class="col-sm-5">
            <div class="form-group"></div>
            <label for="colorMascota">Color</label>
            <select name="colorMascota"
                    id="colorMascota"
                    class="form-control">
                <option value="1">Blanco</option>
                <option value="2">Crema</option>
                <option value="1">Negro</option>
                <option value="2">Cafe</option>
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <div class="form-group"></div>
            <label for="descripcionMascota">Descripción</label>
            <textarea name="descripcionMascota"
                      id="descripcionMascota"
                      rows="4"
                      class="form-control">
            </textarea>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <div class="form-group"></div>
            <label for="fotoMascota">Link de la foto</label>
            <input type="text"
                   name="fotoMascota"
                   id="fotoMascota"
                   class="form-control">
        </div>
    </div>


    <div class="row">
        <div class="col-sm-5">
            <div class="form-group"></div>
            <label for="estadoMascota">Estado de la mascota</label>
            <!--    <input type="text"
                       name="estadoMascota"
                       id="estadoMascota"
                       class="form-control"> -->
            <input type="text"
                   name="estadoMascota"
                   id="estadoMascota"
                   value="True"
                   readonly="readonly"
                   class="form-control"
            hidden="hidden">
        </div>
    </div>
<div class="row">
    <div class="col-sm-3"></div>
        <div class="col-sm-4">
            <button class="btn btn-outline-primary  btn-block espaciado-boton">
                Crear mascota</button>
        </div>
    <div class="col-sm-3"></div>

</div>

    </form>

</div>


<%- include('librerias')%>
<%- include('footer')%>