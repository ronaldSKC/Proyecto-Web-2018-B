<% const existeMensaje = typeof mensaje !== "undefined"%>
<%- include('header'); %>
<br><br><br>


<% if (existeMensaje){%>

    <div class="<%= clase %>" role="alert">
            <span class="font-weight-bold">
                MENSAJE:
            </span> : <%= mensaje %>
    </div>
<%}%>

<!-- ##########################AQUI TENEMOS LA PRIMERA DIVISION DEL CONTENEDOR########################### -->


<div class="container" align="center">
