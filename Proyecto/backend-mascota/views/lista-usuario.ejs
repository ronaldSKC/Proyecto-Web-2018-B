<% const existeMensaje = typeof mensaje !== "undefined"%>

<%- include('header'); %>
<br><br><br>
<% if (existeMensaje){%>
<p>MENSAJE: <%=mensaje%></p>
<%}%>


<div class="col-lg-12">
    <div class="container-fluid ScrollableContainer ">
        <div class="row">
            <div class="col-lg-6"></div>
            <div class="col-lg-6" align="center">
                <form action="/usuario/inicio" method="get">
                    <label for="busqueda">BÃºsqueda usuario</label>
                    <input id="busqueda" type="text" name="busqueda" class="form-group">
                    <button class="btn btn-outline-primary  espaciado-boton">Buscar</button>
                </form>
            </div>


        </div>


        <div class="row">
            <div class="col-lg-12">
                <h2 align="center">Usuarios registrados en el sistema</h2>
            </div>
        </div>

        <div class="row">
            <% arregloUsuario.forEach( (usuario)=> { %>
            <div class="col-lg-4">
                <table class="table table-hover" content="center" >
                    <tr>
                        <td><h1><%=usuario.nickname%></h1></td>
                    </tr>
                    <tr>
                        <td height="250"><img width="80%" height="100%" src="<%=usuario.fotoUsuario %>" alt=""></td>
                    </tr>
                    <tr>
                        <td><%=usuario.nombreCompletoUsuario %></td>
                    </tr>
                    <tr>
                        <td><%=usuario.direccionUsuario%></td>
                    </tr>
                    <tr>
                        <td><%=usuario.emailUsuario%></td>
                    </tr>

                    <tr><td>
                            <div class="row">


                                <div class="col-lg-6">
                                    <a href="/rol-por-usuario/asignar-rol/<%= usuario.idUsuario %>">
                                        <button class="btn btn-outline-info btn-block espaciado-boton">Actualizar</button>
                                    </a>
                                </div>


                                <div class="col-lg-6">
                                    <form action="/usuario/borrar/<%= usuario.idUsuario %>" method="POST">
                                        <button
                                                class="btn btn-outline-danger btn-block espaciado-boton" type="submit"> Eliminar</button>
                                    </form>
                                </div>
                            </div>

                        <td>
                    </tr>
                </table>
            </div>
            <% }) %>
        </div>

    </div>

    <br>
    <br>
</div>


<%- include('librerias')%>
